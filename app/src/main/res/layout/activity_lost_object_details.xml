<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.LostObjectDetailsActivity">
        <TextView
            android:id="@string/ItemMissing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_25sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold"
            android:text="@string/ItemMissing" />
        <com.google.android.material.textfield.TextInputLayout

            android:id="@string/City"
            android:layout_width="@dimen/_248sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_17sdp"
            android:textSize="@dimen/_15ssp"
            app:boxCornerRadiusBottomStart="5dp"
            >
            <AutoCompleteTextView
                android:id="@+id/auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/_15ssp"
                android:hint="@string/City"
                android:autofillHints="@string/City"
                android:inputType="text"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/DateOfMissing"
                android:layout_width="@dimen/_186sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="@string/dateOfMissing"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14ssp" />

            <TextView
                android:id="@+id/Date"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14ssp"
                android:gravity="center"
                android:background="#66B1BABA"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>