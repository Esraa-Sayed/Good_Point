<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_300sdp"
    android:orientation="vertical"
    tools:context=".ui.PersonFragment"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/AddObjectDetails" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="@dimen/_248sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_17sdp"
        android:textSize="@dimen/_15ssp"
        app:boxCornerRadiusBottomStart="5dp"
        >
        <EditText
            android:id="@+id/Serial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/_15ssp"
            android:hint="@string/SerialID"
            android:autofillHints="@string/City"
            android:inputType="number"
            />
    </com.google.android.material.textfield.TextInputLayout>
        <EditText
            android:id="@+id/textArea_information"
            android:layout_width="@dimen/_248sdp"
            android:layout_height="@dimen/_130sdp"
            android:hint="@string/Description"
            android:textColorHighlight="#CC888585"
            android:background="#EAD3AD"
            android:gravity="top|left"
            android:layout_gravity="center"
            android:textColorHint="@color/cardview_dark_background"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbarSize="@dimen/_5sdp"
            android:scrollbars="vertical"
            android:lines="6"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_15ssp"
            android:scrollHorizontally="false"
            style="@style/Widget.AppCompat.EditText"/>
</LinearLayout>