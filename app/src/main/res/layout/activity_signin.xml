<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SigninActivity"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/ic_home_background"
   >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="@dimen/_34sdp"
        android:layout_marginTop="@dimen/_70sdp"
        android:layout_marginLeft="@dimen/_125sdp"
        android:text="Good Point"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_marginLeft="@dimen/_15sdp">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_person_24"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/usernameWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/UserName"
                    android:inputType="text"
                    android:id="@+id/email"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_lock_24"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:hint="@string/Password"
                    android:inputType="textWebPassword"
                    android:id="@+id/pass"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_40sdp"
        android:textSize="@dimen/_15sdp"
        android:text="@string/SignIn"
        android:background="@drawable/oval"
        android:textColor="#ffffff"
        android:id="@+id/sigin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RememberMe"
            android:layout_marginLeft="@dimen/_10sdp" />
        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "@string/ForgetPassword"
            android:textColor = "#F49C3B"
            android:layout_marginLeft = "@dimen/_80sdp"
            android:textSize = "@dimen/_15sdp"
            android:autoLink = "web" android:id="@+id/forgetPass"
            android:layout_centerInParent ="true"
            android:linksClickable="true" />
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="@dimen/_10sdp">
       <View
           android:layout_width="@dimen/_95sdp"
           android:layout_height="@dimen/_2sdp"
           android:layout_marginTop="@dimen/_9sdp"
           android:layout_marginRight="@dimen/_20sdp"
           android:layout_marginLeft="@dimen/_15sdp"
           android:background="@android:color/darker_gray"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/_13sdp"
           android:layout_gravity="center"
           android:layout_marginLeft="@dimen/_15sdp"
           android:text="@string/or"/>
       <View
           android:layout_width="@dimen/_100sdp"
           android:layout_height="@dimen/_2sdp"
           android:layout_marginLeft="@dimen/_50sdp"
           android:layout_marginTop="@dimen/_9sdp"
           android:layout_marginRight="@dimen/_20sdp"
           android:background="@android:color/darker_gray"/>

   </LinearLayout>
        <Button
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_40sdp"
            android:textSize="@dimen/_15sdp"
            android:text="@string/CreateNewAccount"
            android:background="@drawable/custom_button"
            android:textColor="#ffffff"
            android:id="@+id/NewAccount"/>

</LinearLayout>