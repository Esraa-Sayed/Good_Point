<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foregroundTint="#7C1010"
    android:gravity="center"
    android:background="@drawable/ic_design"
    >


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="@dimen/_190sdp"
        app:srcCompat="@drawable/ic_baseline_location_on_24" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"
        app:srcCompat="@drawable/ic_baseline_search_24"
       />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView7"
        android:layout_marginLeft="@dimen/_85sdp"
        android:fontFamily="@font/roboto_bold"
        android:text="Good Point"
        android:textAlignment="center"
        android:textColor="#6D7B95"
        android:textSize="@dimen/_30ssp" />



    <ImageView
        android:id="@+id/arrow"
        android:layout_width="@dimen/_34sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/_158sdp"
        app:srcCompat="@drawable/ic_baseline_navigate_next_24"
      />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_marginLeft="@dimen/_130sdp"
        android:layout_marginTop="@dimen/_60sdp"
        app:srcCompat="@drawable/circle2" />



</RelativeLayout>
